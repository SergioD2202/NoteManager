<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.SD.notepad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/note_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/note_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notepad">
        <activity
            android:name=".NoteManager"
            android:label="@string/title_activity_note_manager"
            android:theme="@style/Theme.Notepad.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NoteView"
            android:label="@string/app_name"
            android:theme="@style/Theme.Notepad.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>